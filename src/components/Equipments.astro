    quantity: 2,
  },
];
---

<section aria-label="Equipamiento con el que se cuenta" id="equipment">
  <h1 class="text-center font-customFont text-3xl bg-zinc-800 py-10">
    Equipamiento
  </h1>
  <div
    class="flex flex-col md:grid md:grid-cols-2 xl:grid xl:grid-cols-3 place-content-center gap-5 my-10 md:px-5"
  >
    <p
      class="w-screen md:w-full text-center place-content-center px-10 text-xl text-balance py-5 outline outline-1 outline-yellow-500/60 bg-white/10 md:rounded-3xl text-white/80"
    >
      Contamos con <span class="text-yellow-500 font-bold"
        >el mejor equipamiento</span
      > para hacer de tu fiesta el mejor momento.
    </p>
    {
      equipements.map((equipment) => (
        <Equipment
          name={equipment.name}
          description={equipment.description}
          imgName={equipment.imgName}
          quantity={equipment.quantity}
        />
      ))
    }
  </div>
</section>
